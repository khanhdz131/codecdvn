<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Lịch Sử Giao Dịch - Roblox Shop VIP</title>
  <style>
    body {
      background: linear-gradient(to right, #1e1e2f, #3a3a5d);
      font-family: 'Segoe UI', sans-serif;
      color: white;
      margin: 0;
      padding: 20px;
    }

    .container {
      max-width: 1000px;
      margin: auto;
      background-color: rgba(255,255,255,0.05);
      padding: 30px;
      border-radius: 16px;
      box-shadow: 0 0 20px rgba(0,0,0,0.4);
    }

    h2 {
      text-align: center;
      color: #ffc107;
      margin-bottom: 30px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 40px;
    }

    th, td {
      border: 1px solid rgba(255,255,255,0.2);
      padding: 12px;
      text-align: center;
    }

    th {
      background-color: #ffc107;
      color: black;
    }

    tr:nth-child(even) {
      background-color: rgba(255,255,255,0.05);
    }

    .username-box {
      text-align: center;
      margin-bottom: 20px;
      font-size: 18px;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="username-box">
      Xin chào: <strong><%= username %></strong>
    </div>

    <h2>LỊCH SỬ MUA ACC</h2>
    <table>
      <thead>
        <tr>
          <th>Tên ACC</th>
          <th>Giá Robux</th>
          <th>Thời gian</th>
        </tr>
      </thead>
      <tbody>
        <% if (lichSuMua.length === 0) { %>
          <tr><td colspan="3">Không có giao dịch mua acc nào.</td></tr>
        <% } %>
        <% lichSuMua.forEach(item => { %>
          <tr>
            <td><%= item.tenAcc %></td>
            <td><%= item.gia %> R$</td>
            <td><%= item.thoigian %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <h2>LỊCH SỬ NẠP TIỀN</h2>
    <table>
      <thead>
        <tr>
          <th>Số tiền</th>
          <th>Hình thức</th>
          <th>Thời gian</th>
        </tr>
      </thead>
      <tbody>
        <% if (lichSuNap.length === 0) { %>
          <tr><td colspan="3">Chưa có giao dịch nạp tiền nào.</td></tr>
        <% } %>
        <% lichSuNap.forEach(item => { %>
          <tr>
            <td><%= item.sotien %> VNĐ</td>
            <td><%= item.hinhthuc %></td>
            <td><%= item.thoigian %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
